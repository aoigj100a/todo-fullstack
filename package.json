{
  "name": "todo-fullstack",
  "private": true,
  "packageManager": "pnpm@10.2.1",
  "scripts": {
    "dev:backend": "pnpm --filter ./apps/backend dev",
    "dev:frontend": "pnpm --filter ./apps/frontend dev",
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "test": "pnpm -r test",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r run lint:fix",
    "seed": "cd apps/backend && node src/scripts/seed-data.js",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "sharp": "latest"
    }
  }
}
